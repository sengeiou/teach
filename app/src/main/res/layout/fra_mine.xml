<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/mine_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/mine_logo" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="@drawable/user_img_bg"
            android:gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_img"
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:riv_corner_radius="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#25519A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ID:29292929"
                android:textColor="#7F7F7F"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/setting_img"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:src="@drawable/setting_img" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/user_msg"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mine_top_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/user_msg" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:text="个人信息"
                    android:textColor="#4D4D4D"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/next" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:id="@+id/my_down_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mine_top_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/my_down_load" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:text="目录下载"
                    android:textColor="#4D4D4D"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/next" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/my_shoucang"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mine_top_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/my_shoucang" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:text="我的收藏"
                    android:textColor="#4D4D4D"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/next" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/login_bt"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>