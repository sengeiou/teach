<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <android.support.v7.widget.CardView
        android:id="@+id/jianyifankui"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mine_top_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/jianyifankui" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:text="建议反馈"
                    android:textColor="#4D4D4D"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/next" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/clear_huancun"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mine_top_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/qingchuhuancun" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:text="清理缓存"
                    android:textColor="#4D4D4D"
                    android:textSize="16sp" />


            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="23dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/mine_top_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="27dp"
                    android:src="@drawable/jianchagengxin" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:text="检查更新"
                    android:textColor="#4D4D4D"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/yonghuxieyi"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="用户协议"
                android:textColor="#4D4D4D"
                android:textSize="16sp" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/yinsizhengce"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="隐私政策"
                android:textColor="#4D4D4D"
                android:textSize="16sp" />


        </android.support.v7.widget.CardView>

    </LinearLayout>


    <TextView
        android:id="@+id/version_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="47dp"
        android:gravity="center_horizontal|bottom"
        android:text="版本 1.0"
        android:textColor="#7F7F7F"
        android:textSize="14sp" />

</LinearLayout>